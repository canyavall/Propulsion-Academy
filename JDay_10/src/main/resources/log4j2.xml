<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<File name="MyFile" fileName="logs/tweeter.log">
	        <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
	    </File>
	</Appenders>
	<Loggers>
		<Logger name="tweeter" level="info" />
		<Root level="info">
			<AppenderRef ref="MyFile" />
		</Root>
	</Loggers>
</Configuration>